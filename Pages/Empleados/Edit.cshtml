@page
@model RostrosFelicesWEB.Pages.Empleados.EditModel
@{
	ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<h4>Empleados</h4>
<hr />
<div class="row">
	<div class="cold-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Empleados.Id" />
			<div class="form-group">
				<label asp-for="Empleados.Name" class="control-label"></label>
				<input asp-for="Empleados.Name" class="form-control" />
				<span asp-validation-for="Empleados.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success" />
				<a asp-page="./Index" class="btn btn-primary">Back to List</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}